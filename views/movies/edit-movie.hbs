<h2>Update the movie</h2>

<form action="/movies/{{movie._id}}/edit" method="POST">
<label for="title">Title:</label>
<input type="text" name="title" id="name" value="{{editMovie.title}}">
<label for="genre">Genre:</label>
<input type="text" name="genre" id="genre" value="{{editMovie.genre}}">
<label for="plot">Max Plot:</label>
<input type="text" name="plot" id="plot" value="{{editMovie.plot}}">
<select name="cast" id="cast" multiple>
    {{#each allOtherCelebrities}}
  <option value="{{this._id}}">{{name}}</option>
  {{/each}}
</select>
<button>Submit</button>
</form>